{
	"name": "ofcold/component-config",
	"description": "Manage Ofcold configuration by persistent storage.",
	"license": "MIT",
	"homepage": "https://ofcold.com",
	"authors": [
		{
			"name": "Bill li",
			"email": "bill.li@ofcold.com"
		}
	],
	"require": {
		"php": "^7.4|^8.0",
		"symfony/finder": "^5.1",
		"illuminate/support": "^8.0"
	},
	"require-dev": {
		"mockery/mockery": "^1.4",
		"phpunit/phpunit": "^10"
	},
	"autoload": {
		"psr-4": {
			"Ofcold\\Component\\Config\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Ofcold\\Component\\ConfigTests\\": "tests/"
		}
	},
	"config": {
		"sort-packages": true
	},
	"minimum-stability": "dev"
}
